{
  "manifest_version": 3,
  "name": "Prompt Saver",
  "version": "1.0",
  "description": "Automatically save prompts from AI chatbot websites.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://*.openai.com/*",
    "https://bard.google.com/*",
    "https://claude.ai/*",
    "https://*.chat.*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://*.openai.com/*",
        "https://bard.google.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
